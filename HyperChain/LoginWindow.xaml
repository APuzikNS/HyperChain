<Window x:Class="HyperChain.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterScreen"
        Title="Ідентифікація користувача" Height="304" Width="336" ResizeMode="NoResize">
    <Grid>
        <TextBox Height="23" HorizontalAlignment="Left" Margin="61,68,0,0" Name="edUserName" VerticalAlignment="Top" Width="186" />
        <PasswordBox Height="23" HorizontalAlignment="Left" Margin="61,143,0,0" Name="edPassword" VerticalAlignment="Top" Width="186" Password="" />
        <Button Content="OK" Height="23" Margin="64,201,0,0" Name="btnLogin" VerticalAlignment="Top" HorizontalAlignment="Left" Width="75" Click="btnLogin_Click" />
        <Label Content="Введіть ім'я" Height="28" HorizontalAlignment="Left" Margin="61,34,0,0" Name="lbName" VerticalAlignment="Top"/>
        <Label Content="Введіть пароль" Height="28" HorizontalAlignment="Left" Margin="61,109,0,0" Name="lbPwd" VerticalAlignment="Top"/>
        <Button Content="Скасувати" Height="23" Margin="172,201,0,0" Name="btnCancel" VerticalAlignment="Top" HorizontalAlignment="Left" Width="75" Click="btnCancel_Click" />
        
    </Grid>
</Window>
